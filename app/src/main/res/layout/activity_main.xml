<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="welcom to smart parking app"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/back"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="we are making this app to make the process of parking more easier than the last using internet of thing (IOT) technology  to enable you to be aware of the recent empty
parking slots and enable you to make parking reservation via your smart app and we offer service of paying via your credit card as a paying option  "
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="20dp" />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CONTINUE"
                android:layout_gravity="center_horizontal"
                android:onClick="lisner"
                android:background="@drawable/btn"
                android:textColor="@color/colorPrimary"


                />



        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>


</android.support.constraint.ConstraintLayout>